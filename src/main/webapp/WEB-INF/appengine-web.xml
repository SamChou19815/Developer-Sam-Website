<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
    <application>dev-sam</application>
    <version>3</version>
    <runtime>java8</runtime>
    <automatic-scaling>
        <min-idle-instances>1</min-idle-instances>
        <max-idle-instances>1</max-idle-instances>
    </automatic-scaling>
    <instance-class>F2</instance-class>
    <threadsafe>true</threadsafe>
    <public-root>/dist/</public-root>

    <warmup-requests-enabled>true</warmup-requests-enabled>

    <system-properties>
        <property name="java.util.logging.config.file"
                  value="WEB-INF/logging.properties"/>
    </system-properties>

    <static-files>
        <include path="/dist/**.png" expiration="7d 23h"/>
        <include path="/dist/**.jpg" expiration="7d 23h"/>
        <include path="/dist/**.ico" expiration="7d 23h"/>
        <include path="/dist/**.gif" expiration="4d 23h"/>
        <include path="/dist/**.css" expiration="7d 23h"/>
        <include path="/dist/**.js" expiration="7d 23h"/>
        <include path="/dist/**.html" expiration="1h"/>
        <include path="/dist/**.zip"/>
        <include path="/dist/**.pdf"/>
        <exclude path="/dev-sam-frontend/**"/>
    </static-files>
</appengine-web-app>
