<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Google User Only Apps</web-resource-name>
            <url-pattern>/apis/scheduler/delete</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Google User Only Apps</web-resource-name>
            <url-pattern>/apis/scheduler/markAs</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Google User Only Apps</web-resource-name>
            <url-pattern>/apis/scheduler/add</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>

    <filter>
        <filter-name>DirectToIndexFilter</filter-name>
        <filter-class>com.developersam.controller.filter.DirectToIndexFilter
        </filter-class>
    </filter>

    <filter-mapping>
        <filter-name>DirectToIndexFilter</filter-name>
        <url-pattern>/projects</url-pattern>
        <url-pattern>/ten</url-pattern>
        <url-pattern>/scheduler</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <error-page>
        <!-- Missing resource -->
        <error-code>404</error-code>
        <location>/index.html</location>
    </error-page>

</web-app>
